{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "metric_id": {
            "type": "string",
            "description": "Unique identifier for the metric"
        },
        "name": {
            "type": "string",
            "description": "Human-readable name of the metric"
        },
        "domain": {
            "type": "string",
            "description": "Functional area (e.g., Finance, HR)"
        },
        "calculation_logic": {
            "type": "object",
            "properties": {
                "abstract": {
                    "type": "string",
                    "description": "Platform-agnostic logic description"
                },
                "sql_standard": {
                    "type": "string",
                    "description": "Standard ANSI SQL implementation"
                },
                "dax_pattern": {
                    "type": "string",
                    "description": "Power BI DAX implementation"
                }
            },
            "required": [
                "abstract"
            ]
        },
        "owner": {
            "type": "string",
            "description": "Team or Role responsible for this definition"
        },
        "status": {
            "type": "string",
            "enum": [
                "Draft",
                "Active",
                "Deprecated"
            ],
            "default": "Draft"
        },
        "definition": {
            "type": "string",
            "description": "Detailed functional description"
        },
        "icon": {
            "type": "string",
            "description": "Bootstrap Icon class"
        },
        "targetIndustries": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "criticalDqDimensionIds": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "metadata": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+$"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "change_log": {
                    "type": "string"
                }
            }
        },
        "compliance": {
            "type": "object",
            "properties": {
                "gdpr_pii": {
                    "type": "boolean"
                },
                "data_classification": {
                    "type": "string",
                    "enum": [
                        "Public",
                        "Internal",
                        "Confidential",
                        "Restricted"
                    ]
                },
                "ai_risk_level": {
                    "type": "string",
                    "enum": [
                        "Minimal",
                        "High",
                        "Unacceptable"
                    ]
                }
            }
        },
        "lineage": {
            "type": "object",
            "properties": {
                "upstream_metric_ids": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "source_systems": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "metric_id",
        "name",
        "domain",
        "calculation_logic",
        "owner",
        "definition",
        "status"
    ]
}