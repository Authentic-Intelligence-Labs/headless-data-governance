{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "metric_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "domain": {
            "type": "string",
            "enum": [
                "Finance",
                "Operations",
                "Sales",
                "HR"
            ]
        },
        "owner": {
            "type": "string"
        }
    },
    "required": [
